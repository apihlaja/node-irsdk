{
  "name": "node-irsdk",
  "version": "1.1.1",
  "description": "iRacing SDK implementation for Node.js",
  "main": "src/node-irsdk.js",
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha src/**/*-spec.js",
    "lint": "standard",
    "doc": "jsdoc2md -t src/doc/README.hbs --partial src/doc/examples.hbs -m none -g none src/node-irsdk.js src/JsIrSdk.js src/IrSdkConsts.js > README.md",
    "ready": "npm test && npm run doc"
  },
  "keywords": [
    "iracing"
  ],
  "author": "Antti Pihlaja",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apihlaja/node-irsdk.git"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "bindings": "^1.2.1",
    "js-yaml": "^3.3.1",
    "nan": "^2.0.9"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "jsdoc-to-markdown": "^2.0.1",
    "mocha": "^3.1.2",
    "moment": "^2.15.2",
    "sandboxed-module": "^2.0.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "standard": "^8.5.0"
  },
  "standard": {
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach",
      "sinon"
    ]
  }
}
